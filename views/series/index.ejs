        <li class="pageNumberGrp disabled"><a>...</a></li>
        <% } %>
        <% } %>
 
        <% if (current == pages) { %>
        <li class="disabled"><a>»</a></li>
        <% } else { %>
        <li><a href="/series/<%= series[0].series_short %>?page=<%= Number(current) + 1 %>">»</a></li>
