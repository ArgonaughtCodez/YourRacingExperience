<% include partials/header %>


<div  class="seriesEditForm">
    <h2> Admins </h2>
    <hr>
    <% if(users.length > 0) { %>
        <% var z = users.length; %>
        <% while (z--){ %>
            <% if (users[z].isAdmin === true){ %>
               
                        
                        <% if(users[z].username === "Admin"){ %>
                        
                        <div class="form-group">
                                    <input type="text" class="form-control" name="race_order" id="race_order" value="<%= users[z].username %>" disabled>
                                </div>
                                
                        
                        
                        
                        <% } else { %>
